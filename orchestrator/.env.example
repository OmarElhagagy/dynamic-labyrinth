# =============================================================================
# Orchestrator Service Environment Variables
# =============================================================================
# Copy this file to .env and modify values for your environment.
# NEVER commit .env files with secrets to version control!

# -----------------------------------------------------------------------------
# Service Settings
# -----------------------------------------------------------------------------
ORCHESTRATOR_SERVICE_NAME=orchestrator
ORCHESTRATOR_SERVICE_VERSION=1.0.0
ORCHESTRATOR_DEBUG=false
ORCHESTRATOR_HOST=0.0.0.0
ORCHESTRATOR_PORT=8000

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
# SQLite (default)
ORCHESTRATOR_DATABASE_URL=sqlite+aiosqlite:///./data/orchestrator.db

# PostgreSQL (production alternative)
# ORCHESTRATOR_DATABASE_URL=postgresql+asyncpg://user:pass@localhost:5432/orchestrator

# -----------------------------------------------------------------------------
# Pool Configuration
# -----------------------------------------------------------------------------
ORCHESTRATOR_POOLS_CONFIG_PATH=pools.yaml

# -----------------------------------------------------------------------------
# Session Settings
# -----------------------------------------------------------------------------
ORCHESTRATOR_SESSION_TTL_SECONDS=3600
ORCHESTRATOR_SESSION_CLEANUP_INTERVAL=300

# -----------------------------------------------------------------------------
# Nginx Settings
# -----------------------------------------------------------------------------
ORCHESTRATOR_NGINX_MAP_PATH=/etc/nginx/maps/honeytrap_upstream.map
ORCHESTRATOR_NGINX_RELOAD_COMMAND=nginx -s reload
ORCHESTRATOR_NGINX_HEALTHCHECK_URL=http://nginx:80/health
ORCHESTRATOR_DEFAULT_UPSTREAM=level1_pool

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
# IMPORTANT: Change this in production!
ORCHESTRATOR_HMAC_SECRET=your-secure-hmac-secret-here
ORCHESTRATOR_HMAC_HEADER_NAME=X-HMAC-Signature
ORCHESTRATOR_RATE_LIMIT=100/minute

# -----------------------------------------------------------------------------
# External Services
# -----------------------------------------------------------------------------
ORCHESTRATOR_CEREBRUM_URL=http://cerebrum:8001

# -----------------------------------------------------------------------------
# Health Checks
# -----------------------------------------------------------------------------
ORCHESTRATOR_HEALTH_CHECK_INTERVAL=30
ORCHESTRATOR_HEALTH_CHECK_TIMEOUT=5

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
ORCHESTRATOR_LOG_LEVEL=INFO
ORCHESTRATOR_LOG_FORMAT=json
