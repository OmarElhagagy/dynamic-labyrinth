# =============================================================================
# Dynamic Labyrinth - Environment Variables
# =============================================================================
# Copy this file to .env and modify values for your environment.
# NEVER commit .env files with secrets to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# General Settings
# -----------------------------------------------------------------------------
COMPOSE_PROJECT_NAME=dynamic-labyrinth

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
# CRITICAL: You MUST change this in production!
# Generate a secure secret with: openssl rand -hex 32
# Example (DO NOT USE THIS - generate your own):
# HMAC_SECRET=a]7$kP9#mN2@xL5^vQ8!wE3&hF6*jB4~
HMAC_SECRET=

# CORS Origins (comma-separated, required for production)
# Example: http://dashboard.yourdomain.com,https://admin.yourdomain.com
ORCHESTRATOR_CORS_ORIGINS=http://localhost:3000,http://dashboard:3000

# -----------------------------------------------------------------------------
# Registry Settings (for CI/CD)
# -----------------------------------------------------------------------------
REGISTRY_URL=ghcr.io
REGISTRY_USERNAME=
REGISTRY_PASSWORD=
IMAGE_TAG=latest

# -----------------------------------------------------------------------------
# Resource Limits (Production)
# -----------------------------------------------------------------------------
ORCHESTRATOR_MEMORY_LIMIT=512M
HONEYTRAP_L1_MEMORY_LIMIT=256M
HONEYTRAP_L2_MEMORY_LIMIT=512M
HONEYTRAP_L3_MEMORY_LIMIT=1G

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FORMAT=json

# -----------------------------------------------------------------------------
# Network Settings
# -----------------------------------------------------------------------------
FRONTEND_SUBNET=10.0.1.0/24
BACKEND_SUBNET=10.0.2.0/24
MANAGEMENT_SUBNET=10.0.3.0/24

# -----------------------------------------------------------------------------
# External Services (optional)
# -----------------------------------------------------------------------------
# ELASTICSEARCH_URL=http://elasticsearch:9200
# KAFKA_BROKERS=kafka:9092
# REDIS_URL=redis://redis:6379
